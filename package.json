{
  "name": "auth-koa-postgres",
  "version": "1.0.0",
  "description": "Authentication service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "docker:dev:db:up": "docker-compose -f docker-compose.dev.yml up -d postgres adminer",
    "docker:dev:db:down": "docker-compose -f docker-compose.dev.yml down postgres adminer",
    "migrate:dev": "pnpm prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "generate": "npx prisma generate"
  },
  "dependencies": {
    "@koa/bodyparser": "^6.0.0",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.1",
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.0.1",
    "joi": "^17.13.3",
    "koa": "^3.0.0"
  },
  "devDependencies": {
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^24.0.10",
    "cross-env": "^7.0.3",
    "prisma": "^6.11.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "keywords": [],
  "author": "koss<jobs.koss@gmail.com>",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "prisma": {
    "schema": "src/db/client/schema.prisma"
  }
}
